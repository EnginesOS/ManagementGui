<% url = @library.new_record? ? cloud_libraries_path(cloud_id: @cloud.id) : cloud_library_path(cloud_id: @cloud.id, id: @library.id) %>
<%= form_for @library, url: url do |f| %>
<%= f.engines_field :name, horizontal: true, left: 4 %>
<%= f.engines_field :url, label: 'URL', horizontal: true, left: 4 %>
<%= f.engines_cancel_submit url: cloud_libraries_path(cloud_id: @cloud.id), remote: true %>
<% end %>
