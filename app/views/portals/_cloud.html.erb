<%= content_tag :div, class: 'portal-col col-xs-6 col-sm-4 col-md-3 col-lg-2 col-centered' do %>
  <%= button_to cloud_portal_path, params: {cloud_id: cloud.id}, method: :get, class: 'btn portal_button show_waiting_spinner', title: "Open #{cloud.label}" do %>
    <%= content_tag :div, class: 'portal_icon' do %>
      <% if cloud.icon.blank? || cloud.icon.dirty? %>
        <%= icon 'fa-cloud' %>
      <% else %>
        <%= image_tag cloud.icon.url(:small), alt: '' %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: 'portal_label' do %>
      <%= cloud.label %>
    <% end %>
  <% end %>
<% end %>
