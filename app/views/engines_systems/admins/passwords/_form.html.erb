<%= custom_form_for @password, url: system_admin_password_path(engines_system_id: @engines_system.id), method: :patch do |f| %>
  <%= f.engines_field :current_password, as: :password, autocomplete: :off, label: 'Current password', title: 'Current password' %>
  <%= f.engines_field :new_password, as: :password_with_confirmation, label: 'New password with confirmation', autocomplete: :off, title: 'New password with confirmation' %>
  <%= f.engines_cancel_submit url: system_admin_path(engines_system_id: @engines_system.id), remote: true %>
<% end %>
