<%= form_for @email, url: system_admin_email_path(engines_system_id: @engines_system.id), method: :patch do |f| %>
  <%= f.engines_field :password, as: :password, autocomplete: :off, title: 'Admin password' %>
  <%= f.engines_field :email, as: :email, autocomplete: :off %>
  <%= f.engines_cancel_submit url: system_admin_path(engines_system_id: @engines_system.id), remote: true %>
<% end %>
