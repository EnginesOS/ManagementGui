<%= custom_form_for @locale,
    url: system_locale_path(
      engines_system_id: @locale.engines_system.id ),
    method: :patch do |f| %>
  <%= f.engines_field :country, as: :country, include_blank: true %>
  <%= f.engines_field :language, as: :language, include_blank: true %>
<%= f.engines_cancel_submit url: system_control_panel_path(
      engines_system_id: @locale.engines_system.id ), remote: true %>
<% end %>
