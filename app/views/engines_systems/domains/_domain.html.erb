<% unless domain[:domain_name] == 'local' %>
  <hr>
  <%= content_tag :div, class: 'dl-horizontal' do %>
    <%= data_list_text 'Domain', domain[:domain_name] %>
    <%= data_list_text 'Internal only', boolean_text(domain[:internal_only]) %>
    <%= data_list_text 'Self hosted', boolean_text(domain[:self_hosted]) %>
